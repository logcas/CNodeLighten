/* pages/me/me.wxss */

.container {
  margin: 0;
  padding: 0;
  text-align: left;
  height: 100%;
}

.selections {
  width: 100%;
}

.selection {
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.selection image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
}

.selection text {
  position: relative;
  top: -10rpx;
  margin-left: 20rpx;
}

.selection.logout {
  text-align: center;
}

.selection.logout text {
  top: 20rpx;
  color: red;
}