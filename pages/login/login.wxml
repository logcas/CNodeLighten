<!--pages/login/login.wxml-->
<view class='container page-body'>
  <view class='section'>
    <form bindsubmit='getToken'>
      <view class='page-section'>
        <view class="weui-cells__title">验证你的AccessToken</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" auto-focus placeholder="AccessToken" name="accessToken" />
          </view>
        </view>
      </view>
      <view class='button-section'>
        <button form-type='submit' type='primary'>登录</button>
      </view>
      <view class='button-section'>
        <button type='default' bindtap='scanCode'>扫描二维码（推荐）</button>
      </view>
    </form>
  </view>
</view>