/**index.wxss**/
.container {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.navbar {
  margin: 0;
  padding: 0;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 70rpx;
  background: #444;
  color: #fff;
  line-height: 70rpx;
  z-index: 10;
}

.nav-item {
  float: left;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 35rpx;
  font-family: '黑体';
}

.nav-item .active {
  font-size: 45rpx;
}

.posts {
  margin-top: 80rpx;
}